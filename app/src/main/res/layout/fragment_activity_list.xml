<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorAccent">


    <RelativeLayout
        android:id="@+id/fragment_activity_user_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/textView19"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="31dp"
            android:layout_marginTop="29dp"
            android:text="Korisnik" />

        <TextView
            android:id="@+id/fragment_activity_list_userName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/textView19"
            android:layout_marginStart="54dp"
            android:layout_toEndOf="@+id/textView19"
            android:text="TextView" />

        <TextView
            android:id="@+id/textView24"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView19"
            android:layout_marginTop="37dp"
            android:layout_toStartOf="@+id/fragment_activity_list_userName"
            android:text="Telefon:" />

        <TextView
            android:id="@+id/fragment_activity_list_telephone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/fragment_activity_list_userName"
            android:layout_alignTop="@+id/textView24"
            android:text="063123" />

        <TextView
            android:id="@+id/textView25"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView24"
            android:layout_marginTop="30dp"
            android:layout_toStartOf="@+id/fragment_activity_list_userName"
            android:text="Agencija:" />

        <TextView
            android:id="@+id/fragment_activity_list_agnecy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/fragment_activity_list_userName"
            android:layout_alignTop="@+id/textView25"
            android:text="BG Stan" />
    </RelativeLayout>

    <FrameLayout
        android:layout_marginTop="10dp"
        android:id="@+id/fragment_activity_list_fragment_frame"
        android:layout_width="match_parent"
        android:layout_below="@id/fragment_activity_user_info"
        android:layout_height="wrap_content"
        />
</RelativeLayout>