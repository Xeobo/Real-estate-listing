<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:background="@color/colorAccent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/fragment_search_user_agent_user_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="15dp"
        android:layout_marginTop="15dp"
        android:text="Agent" />

    <AutoCompleteTextView
        android:id="@+id/fragment_search_user_agent"
        android:layout_width="match_parent"
        android:layout_marginEnd="15dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:layout_alignBaseline="@+id/fragment_search_user_agent_user_label"
        android:layout_alignBottom="@+id/fragment_search_user_agent_user_label"
        android:layout_toEndOf="@+id/fragment_search_user_agent_user_label" />

    <TextView
        android:id="@+id/textView24"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/fragment_search_user_agent_user_label"
        android:layout_below="@+id/fragment_search_user_agent_user_label"
        android:layout_marginTop="25dp"
        android:text="Datum" />

    <TextView
        android:id="@+id/fragment_search_user_date_from"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:text="01.01.2000."
        android:layout_alignBaseline="@+id/textView24"
        android:layout_alignBottom="@+id/textView24"
        android:layout_toEndOf="@+id/textView24" />

    <TextView
        android:id="@+id/textView25"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="-"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        android:layout_alignBaseline="@+id/fragment_search_user_date_from"
        android:layout_alignBottom="@+id/fragment_search_user_date_from"
        android:layout_toEndOf="@+id/fragment_search_user_date_from" />

    <TextView
        android:id="@+id/fragment_search_user_date_to"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="01.01.2100."
        android:layout_alignBaseline="@+id/textView25"
        android:layout_alignBottom="@+id/textView25"
        android:layout_toEndOf="@+id/textView25" />

    <Button
        android:id="@+id/fragment_search_user_date_action"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#fff"
        android:background="@color/red"
        android:layout_alignEnd="@+id/fragment_search_user_agent"
        android:layout_below="@+id/fragment_search_user_date_to"
        android:layout_marginTop="31dp"
        android:text="PronaÄ‘i" />

</RelativeLayout>